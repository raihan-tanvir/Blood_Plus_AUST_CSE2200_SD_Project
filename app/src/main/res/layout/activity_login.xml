<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rayhaan.blood.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorAppBg"
        android:padding="@dimen/padding2x">

        <LinearLayout
            android:layout_marginTop="@dimen/margin2x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding2x"
            android:background="#FFF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:layout_margin="@dimen/margin2x" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/paddingHalf">

                <EditText
                    android:id="@+id/loginEmailET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="#ecf0ef"
                    android:padding="@dimen/paddingHalf"
                    android:inputType="textEmailAddress"
                    android:text="Enter email address"
                    android:textColor="#000000"
                    android:textSize="@dimen/ETFont" />

            </LinearLayout>

            <EditText
                android:id="@+id/loginPasswordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:background="#ecf0ef"
                android:padding="@dimen/paddingHalf"
                android:inputType="textPassword"
                android:text="Enter password"
                android:textColor="#000000"
                android:textSize="@dimen/ETFont" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingHalf"
                android:layout_marginBottom="@dimen/margin">

                <CheckBox
                    android:id="@+id/showPassCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/marginHalf"
                    android:text="Show Password"
                    android:textColor="#000000"
                    android:textSize="18dp" />
            </LinearLayout>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="@dimen/bigButtonWidth"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/green"
                android:gravity="center"
                android:text="@string/login_button_text"
                android:textColor="#ffffff"
                android:textSize="@dimen/buttonFont" />

            <TextView
                android:id="@+id/forgetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/marginHalf"
                android:background="#FFF"
                android:text="Forget Password"
                android:textColor="@color/red"
                android:textSize="@dimen/smallFont" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/marginHalf"
                android:background="#FFF"
                android:text="@string/signup_prompt"
                android:textColor="@color/blue"
                android:textSize="@dimen/smallFont" />

            <Button
                android:id="@+id/signUpFormButton"
                android:layout_width="@dimen/bigButtonWidth"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/registration_button_text"
                android:textSize="@dimen/buttonFont"
                android:layout_marginBottom="@dimen/margin2x"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
